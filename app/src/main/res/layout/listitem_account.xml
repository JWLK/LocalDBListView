<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_background"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:paddingVertical="0dp"
    android:paddingHorizontal="0dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_user"
        android:background="@drawable/circle_border_style00"
        android:padding="15dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="7dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAVID"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="00"
                android:textSize="14dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/user_age_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="years"
                android:textSize="14dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Date"
                android:textSize="12dp"
                android:textColor="@color/colorGrayC4C"/>

            <TextView
                android:id="@+id/user_regist_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2021.01.24"
                android:textSize="12dp"
                android:textColor="@color/colorGrayC4C"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_UserPanel_select"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:text="Select"
        android:textSize="12dp"
        android:textColor="@color/green_300"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_UserPanel_edit"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/transparent"
        android:text="Edit"
        android:textSize="12dp"
        android:textColor="@color/colorGrayDDD"
        android:textStyle="bold"/>

</LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_background"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:paddingVertical="0dp"
    android:paddingHorizontal="0dp"
    android:layout_marginVertical="0dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/temp_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="@color/colorNormal"
            android:textSize="14dp"
            android:fontFamily="@font/nsq_b"/>

        <TextView
            android:id="@+id/temp_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="36.5 Â°C"
            android:textColor="@color/colorNormal"
            android:textSize="34dp"
            android:fontFamily="@font/nsq_b"
            android:letterSpacing="-0.05" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|end">

        <TextView
            android:id="@+id/temp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="11:45 AM"
            android:textColor="@color/colorDark333"
            android:textSize="24dp"
            android:fontFamily="@font/nsq_b"/>

        <TextView
            android:id="@+id/temp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021.01.04 Mon"
            android:textColor="@color/colorDark333"
            android:textSize="12dp"
            android:fontFamily="@font/nsq_r"/>


    </LinearLayout>



</LinearLayout>

</FrameLayout>
